<Popup x:Class="TEdit.Views.ChestEditorPopup" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Placement="Mouse" MouseDown="Popup_MouseDown"
       MouseLeave="Popup_MouseLeave">
  <DockPanel Background="#FF666666" LastChildFill="True">
    <TextBlock Text="Chest Contents:" Foreground="White" Margin="2" FontWeight="Bold" DockPanel.Dock="Top" />
    <Button DockPanel.Dock="Bottom" Click="ClosePopup" Margin="2" Content="OK" />
    <ScrollViewer Height="200">
      <ItemsControl Name="ChestList" Padding="5" Foreground="White" ItemsSource="{Binding}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal" Margin="1">
              <TextBox Text="{Binding Path=StackSize, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                       Width="30" />
              <ComboBox ItemsSource="{Binding Path=ValidItems}"
                        SelectedItem="{Binding Path=Name,Mode=TwoWay}" Width="200" Margin="1,0" />
            </StackPanel>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </DockPanel>
</Popup>